# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nimbus
DB_USER=nimbus
DB_PASSWORD=nimbus_secret

# Backend Configuration
PORT=8080
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
BCRYPT_COST=10
CORS_ORIGINS=http://localhost:3000

# Cookie Security
# Set to "false" for local development (HTTP), "true" or omit for production (HTTPS)
COOKIE_SECURE=false

# Service Health Checks
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_APP_NAME=Nimbus

# Optional: PgAdmin Configuration (if using pgadmin service)
PGADMIN_EMAIL=admin@nimbus.local
PGADMIN_PASSWORD=admin